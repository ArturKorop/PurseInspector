<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Korop Artyr's site</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
            <meta name="google-site-verification" content="x09BCZtsHokNuvffH6KGeb08tspJGrj8Xco_O-BfWyg" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div style="float: left;margin-top: 0;">
                    @{ Html.RenderAction("Menu","Nav"); }
                </div>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Home, sweet home)", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <div id="DivUserInfo">@{Html.RenderAction("UserInfo","UserInformation");}</div>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body" style="min-height: 601px;">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        @Styles.Render("~/Content/themes/base/css")
        @RenderSection("scripts", required: false)
        <footer>
            <p>Powered by Korop Artyr, Version 1.2</p>
            <p>Copyright ©2012, Korop Artyr</p><!--Copyright ©2012 - 2013, Korop Artyr-->
        </footer>
    </body>
</html>
