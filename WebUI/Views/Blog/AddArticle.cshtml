@model Domain.Blog.Article

@{
    Layout = null;
    @Styles.Render("~/Content/blog")
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddArticle</title>
</head>
<body>
    @using (Html.BeginForm("AddArticle", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
       <fieldset>
           <legend>Article</legend>
           <div class="editor-field" style="visibility: hidden">
                @Html.EditorFor(model => model.ID)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ArticleShortName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ArticleShortName)
                @Html.ValidationMessageFor(model => model.ArticleShortName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Text)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Text, new { @cols = "200", @rows = "40" })
                @Html.ValidationMessageFor(model => model.Text)
            </div><p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>}
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
